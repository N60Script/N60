-- الخدمات
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- إنشاء الشاشة
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RentWarningGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- الخلفية السوداء تغطي كل الشاشة
local background = Instance.new("Frame")
background.Size = UDim2.new(1,0,1,0)
background.Position = UDim2.new(0,0,0,0)
background.BackgroundColor3 = Color3.fromRGB(0,0,0)
background.BackgroundTransparency = 0
background.Parent = screenGui

-- النص في منتصف الشاشة
local message = Instance.new("TextLabel")
message.Size = UDim2.new(0.8,0,0.2,0) -- 80% عرض، 20% ارتفاع
message.Position = UDim2.new(0.1,0,0.4,0) -- في منتصف الشاشة تقريبًا
message.BackgroundTransparency = 1
message.Text = "السكربت توقف بسبب عدم دفع الايجار"
message.TextColor3 = Color3.fromRGB(255,0,0)
message.TextScaled = true
message.Font = Enum.Font.ArialBold
message.Parent = background
