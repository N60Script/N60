-- Fullscreen Square Notice GUI
-- ضع هذا LocalScript داخل StarterGui (أو داخل PlayerGui)

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- نص الرسالة (كما طلبت)
local messageText = "السكربت قديم قفلته لان ناس تخش سيرفري ديسكورد وتأخذه وتطلع لاكن لا تخاف لسا موجود في سيرفري حاول توصل له"

-- شاشة واجهة
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullScreenNotice"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- خلفية معتمة (تغطي الشاشة)
local darkBg = Instance.new("Frame")
darkBg.Name = "DarkBackground"
darkBg.BackgroundTransparency = 0.25
darkBg.BackgroundColor3 = Color3.fromRGB(0,0,0)
darkBg.BorderSizePixel = 0
darkBg.Size = UDim2.new(1,0,1,0)
darkBg.Position = UDim2.new(0,0,0,0)
darkBg.Parent = screenGui

-- مربع كبير (سيحافظ على شكل مربع باستخدام UIAspectRatioConstraint)
local bigSquare = Instance.new("Frame")
bigSquare.Name = "BigSquare"
bigSquare.AnchorPoint = Vector2.new(0.5,0.5)
bigSquare.Position = UDim2.new(0.5,0,0.5,0)
-- الحجم هنا 0.95 من الشاشة في العرض والارتفاع؛ UIAspectRatioConstraint سيجعلها مربعة (يعتمد على أصغر بعد)
bigSquare.Size = UDim2.new(0.95,0,0.95,0)
bigSquare.BackgroundColor3 = Color3.fromRGB(12,12,12) -- شبه أسود
bigSquare.BackgroundTransparency = 0
bigSquare.BorderSizePixel = 0
bigSquare.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0,20)
corner.Parent = bigSquare

local aspect = Instance.new("UIAspectRatioConstraint")
aspect.AspectRatio = 1 -- مربع
aspect.Parent = bigSquare

-- إطار داخلي لتوهّج خفيف (اختياري)
local inner = Instance.new("Frame")
inner.Name = "Inner"
inner.AnchorPoint = Vector2.new(0.5,0.5)
inner.Position = UDim2.new(0.5,0,0.5,0)
inner.Size = UDim2.new(0.98,0,0.98,0)
inner.BackgroundColor3 = Color3.fromRGB(20,20,20)
inner.BorderSizePixel = 0
inner.Parent = bigSquare

local innerCorner = Instance.new("UICorner")
innerCorner.CornerRadius = UDim.new(0,16)
innerCorner.Parent = inner

-- نص الرسالة كبير ومركزي
local label = Instance.new("TextLabel")
label.Name = "NoticeText"
label.AnchorPoint = Vector2.new(0.5,0.5)
label.Position = UDim2.new(0.5,0,0.5,0)
label.Size = UDim2.new(0.9,0,0.7,0)
label.BackgroundTransparency = 1
label.Text = messageText
label.TextWrapped = true
label.TextScaled = true
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(230,230,230)
label.TextYAlignment = Enum.TextYAlignment.Center
label.TextXAlignment = Enum.TextXAlignment.Center
label.Parent = inner

-- زر إغلاق (أيقونة X)
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.AnchorPoint = Vector2.new(1,0)
closeButton.Position = UDim2.new(0.99,0,0.01,0)
closeButton.Size = UDim2.new(0.08,0,0.08,0)
closeButton.BackgroundTransparency = 0.15
closeButton.BackgroundColor3 = Color3.fromRGB(40,40,40)
closeButton.Text = "✕"
closeButton.Font = Enum.Font.GothamBold
closeButton.TextScaled = true
closeButton.TextColor3 = Color3.fromRGB(220,220,220)
closeButton.Parent = bigSquare

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(0,6)
closeCorner.Parent = closeButton

-- زر لإخفاء مؤقت (انظر أسفل الواجهة)
local hideButton = Instance.new("TextButton")
hideButton.Name = "HideButton"
hideButton.AnchorPoint = Vector2.new(0.5,1)
hideButton.Position = UDim2.new(0.5,0,0.98,0)
hideButton.Size = UDim2.new(0.35,0,0.07,0)
hideButton.BackgroundTransparency = 0.12
hideButton.BackgroundColor3 = Color3.fromRGB(50,50,50)
hideButton.Text = "حسناً - إخفاء"
hideButton.Font = Enum.Font.GothamSemibold
hideButton.TextScaled = true
hideButton.TextColor3 = Color3.fromRGB(240,240,240)
hideButton.Parent = bigSquare

local hideCorner = Instance.new("UICorner")
hideCorner.CornerRadius = UDim.new(0,10)
hideCorner.Parent = hideButton

-- تأثير دخول (توسيع من 0.7 إلى 1)
bigSquare.Size = UDim2.new(0.7,0,0.7,0)
inner.Size = UDim2.new(0.98,0,0.98,0)
local tweenInfo = TweenInfo.new(0.35, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
TweenService:Create(bigSquare, tweenInfo, {Size = UDim2.new(0.95,0,0.95,0)}):Play()

-- دوال الأزرار
closeButton.MouseButton1Click:Connect(function()
    -- تماماً يحذف الواجهة
    screenGui:Destroy()
end)

hideButton.MouseButton1Click:Connect(function()
    -- يخفي الواجهة بخفة (يبقيها قابلة للإعادة لاحقاً لو تريد تعديل السكربت)
    local t = TweenService:Create(bigSquare, TweenInfo.new(0.25), {Position = UDim2.new(0.5,0,1.5,0)})
    t:Play()
    -- نعتم الخلفية تدريجياً
    TweenService:Create(darkBg, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
    wait(0.35)
    screenGui.Enabled = false
end)

-- وظيفة صغيرة لإعادة الظهور (يمكن استدعاؤها برمجياً إذا احتجت)
function showNotice()
    screenGui.Enabled = true
    darkBg.BackgroundTransparency = 0.25
    bigSquare.Position = UDim2.new(0.5,0,0.5,0)
    TweenService:Create(bigSquare, tweenInfo, {Size = UDim2.new(0.95,0,0.95,0)}):Play()
end

-- (اختياري) استمع لزر مفتاح على لوحة المفاتيح لإظهار الواجهة مجدداً (هنا F)
local UserInputService = game:GetService("UserInputService")
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.F then
        if screenGui.Enabled then
            screenGui.Enabled = false
        else
            showNotice()
        end
    end
end)
