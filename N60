<script>
  (function(){
    const body = document.body;
    const stage = document.getElementById('stage');
    let dark = false;

    // عند الضغط في أي مكان على الصفحة
    function toggleDark(e){
      // إذا ضغطت على رابط أو زر داخلي قد نريد تجاهل لكن هنا كل شيء يُضغط
      dark = !dark;
      if(dark){
        body.classList.add('dark');
        stage.setAttribute('aria-hidden','false');
      } else {
        body.classList.remove('dark');
        stage.setAttribute('aria-hidden','true');
      }
    }

    // استمع لنقرة الماوس أو اللمس
    document.addEventListener('click', toggleDark);
    document.addEventListener('keyup', function(ev){
      // مفتاح المسافة أو Enter أيضاً يبدل
      if(ev.code === 'Space' || ev.code === 'Enter'){ toggleDark(); }
    });

    // منع تفعيل الخريطة عند النقر على البطاقات نفسها من تغيير الحالة فجأة
    // (نترك التبديل لكن نمنع تداخل النقرات عن طريق التأخيرات إن رغبت)
    // إضافة: لو تبي تغيير السلوك (زر خاص بدل أي مكان) أخبرني وأنا أعدّله.
  })();
</script>
</body>
