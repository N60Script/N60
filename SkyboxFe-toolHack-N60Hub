local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")

local CurrentTrack
local isActive = false
local floatPart
local spinConnection
local originalWalkSpeed = humanoid.WalkSpeed
local originalJumpPower = humanoid.JumpPower

--==================================================
-- ÿ™ÿ≠ŸÖŸäŸÑ Anim818
--==================================================
local AnimData = loadstring(game:HttpGet("https://raw.githubusercontent.com/N60Script/N60/refs/heads/main/Anim818"))()

--==================================================
-- ÿ™ÿ≠ŸÖŸäŸÑ To-Anim
--==================================================
local ToAnimFactory = loadstring(game:HttpGet("https://raw.githubusercontent.com/N60Script/N60/refs/heads/main/To-Anim"))()
local AnimFunctions = ToAnimFactory(humanoid, AnimData.Settings, AnimData.FIXED_ANIMATION_ID)

local LoadTrack = AnimFunctions.LoadTrack
local StopTrack = AnimFunctions.StopTrack

-- ÿ™ÿ¥ÿ∫ŸäŸÑ ÿßŸÑÿ£ŸÜŸäŸÖŸäÿ¥ŸÜ
local function ForcePlayAnimation()
    if CurrentTrack then
        CurrentTrack:Stop()
    end
    local anim = Instance.new("Animation")
    anim.AnimationId = "rbxassetid://" .. tostring(AnimData.FIXED_ANIMATION_ID)
    CurrentTrack = humanoid:LoadAnimation(anim)
    CurrentTrack.Looped = true
    CurrentTrack:Play()
end

local floatHeight = AnimData.floatHeight
local flyHeight = AnimData.flyHeight
local spinSpeed = AnimData.spinSpeed

--==================================================
-- ÿ±ÿ≥ÿßÿ¶ŸÑ ÿßŸÑÿ≥Ÿäÿ±ŸÅÿ±
--==================================================
local ev
pcall(function()
    ev = ReplicatedStorage:FindFirstChild("Events") and ReplicatedStorage.Events:FindFirstChild("SendMessage")
end)

local function safeSend(msg)
    if ev then
        pcall(function()
            ev:FireServer(msg)
        end)
    end
end

local function sendTitles()
    safeSend(";char me Tavion20150")
    task.wait(1)
    safeSend(";titlebk me N60 Hub")
end

task.spawn(sendTitles)

player.CharacterAdded:Connect(function()
    task.delay(0.5, sendTitles)
end)

--==================================================
-- ÿ•ÿπÿØÿßÿØ ÿßŸÑÿ¥ÿÆÿµŸäÿ© ÿ®ÿπÿØ ÿßŸÑŸÖŸàÿ™
--==================================================
local function setupCharacter(char)
    character = char
    humanoid = char:WaitForChild("Humanoid")
    rootPart = char:WaitForChild("HumanoidRootPart")

    originalWalkSpeed = humanoid.WalkSpeed
    originalJumpPower = humanoid.JumpPower

    if isActive then
        task.wait(0.5)

        floatPart = Instance.new("Part")
        floatPart.Size = Vector3.new(10,1,10)
        floatPart.Anchored = true
        floatPart.CanCollide = true
        floatPart.Transparency = 0.5
        floatPart.Material = Enum.Material.Neon
        floatPart.Color = Color3.fromRGB(0, 170, 255)
        floatPart.CFrame = rootPart.CFrame + Vector3.new(0, flyHeight, 0)
        floatPart.Parent = workspace

        rootPart.CFrame = floatPart.CFrame + Vector3.new(0, floatHeight, 0)

        humanoid.WalkSpeed = 0
        humanoid.JumpPower = 0

        ForcePlayAnimation()

        spinConnection = RunService.Heartbeat:Connect(function(dt)
            rootPart.CFrame =
                CFrame.new(
                    rootPart.Position.X,
                    floatPart.Position.Y + floatHeight,
                    rootPart.Position.Z
                ) * CFrame.Angles(0, math.rad(spinSpeed * dt), 0)
        end)
    end
end

player.CharacterAdded:Connect(setupCharacter)
setupCharacter(character)

--==================================================
-- GUI
--==================================================
local gui = Instance.new("ScreenGui")
gui.Name = "MiniN60Gui"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 150, 0, 135)
frame.Position = UDim2.new(1, -160, 0, 25) -- ŸäŸÖŸäŸÜ ŸÅŸàŸÇ
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.Active = true
frame.Draggable = true
frame.Parent = gui
Instance.new("UICorner", frame)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "N60 Hack"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.Parent = frame

--==================================================
-- ŸÖÿ≥ÿ™ÿ∑ŸäŸÑ ÿßŸÑÿßÿ≥ŸÖ + ÿ≤ÿ± ÿßŸÑŸÜÿ≥ÿÆ
--==================================================
local nameFrame = Instance.new("Frame")
