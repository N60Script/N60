label.TextWrapped = true
label.Parent = frame

--==================================================
-- Ÿàÿ∏ŸäŸÅÿ© ÿßŸÑÿ≤ÿ±
--==================================================
button.MouseButton1Click:Connect(function()
    if not isActive then
        isActive = true
        button.Text = "ÿ•ŸäŸÇÿßŸÅ"

        ForcePlayAnimation()

        floatPart = Instance.new("Part")
        floatPart.Size = Vector3.new(10,1,10)
        floatPart.Anchored = true
        floatPart.CanCollide = true
        floatPart.Transparency = 0.5
        floatPart.Material = Enum.Material.Neon
        floatPart.Color = Color3.fromRGB(0, 170, 255)
        floatPart.CFrame = rootPart.CFrame + Vector3.new(0, flyHeight, 0)
        floatPart.Parent = workspace

        rootPart.CFrame = floatPart.CFrame + Vector3.new(0, floatHeight, 0)

        humanoid.WalkSpeed = 0
        humanoid.JumpPower = 0

        spinConnection = RunService.Heartbeat:Connect(function(dt)
            rootPart.CFrame =
                CFrame.new(
                    rootPart.Position.X,
                    floatPart.Position.Y + floatHeight,
                    rootPart.Position.Z
                ) * CFrame.Angles(0, math.rad(spinSpeed * dt), 0)
        end)

    else
        isActive = false
        button.Text = "ÿ™ÿÆÿ±Ÿäÿ®"

        StopTrack()
        if CurrentTrack then CurrentTrack:Stop() end

        if floatPart then
            rootPart.CFrame = rootPart.CFrame - Vector3.new(0, 60, 0)
            floatPart:Destroy()
        end

        humanoid.WalkSpeed = originalWalkSpeed
        humanoid.JumpPower = originalJumpPower

        if spinConnection then
            spinConnection:Disconnect()
        end
    end
end)
